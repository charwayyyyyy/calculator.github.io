{
  "name": "ios-calculator",
  "version": "1.0.0",
  "description": "iOS-style calculator with 3D effects",
  "scripts": {
    "start": "php -S localhost:8000",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "sass:build": "sass css/style.scss css/style.css",
    "sass:watch": "sass --watch css/style.scss css/style.css",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "gsap": "^3.7.1",
    "three": "^0.128.0"
  },
  "devDependencies": {
    "@types/gsap": "^3.0.0",
    "@types/jest": "^27.0.0",
    "@types/three": "^0.128.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^27.0.0",
    "prettier": "^2.8.0",
    "sass": "^1.32.8",
    "ts-jest": "^27.0.0",
    "typescript": "^4.5.0"
  }
}